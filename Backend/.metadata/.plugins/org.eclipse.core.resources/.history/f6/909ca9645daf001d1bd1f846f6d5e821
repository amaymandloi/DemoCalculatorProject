package com.yash.calculator.controller;

import com.yash.calculator.model.Calculator;
import com.yash.calculator.services.CalculatorService;

public class CalculatorController {

	private CalculatorService service;
	
	Calculator cal = new Calculator();
	
	public double addition(double x ,double y) {
		cal = service.addition(x, y);
		return cal.getTotal();
	}
	
	public double subtraction(double x, double y) {
		cal = service.subtraction(x, y);
		return cal.getTotal();
	}
	
	public double multification(double x, double y) {
		cal = service.multification(x, y);
		return cal.getTotal();
	}
	
	public double division(double x, double y) {
		cal = service.division(x, y);
		return cal.getTotal();
	}
	
	public double percentage(double x, double y) {
		cal = service.percentage(x, y);
		return cal.getTotal();
	}
	public double square(double x, double y) {
		cal = service.square(x);
		return cal.getTotal();
	}
	public double squareRoot(double x, double y) {
		cal = service.squareRoot(x);
		return cal.getTotal();
	}
	public double numberByOne(double x) {
		cal = service.numberByone(x);
		return cal.getTotal();
	}
}
